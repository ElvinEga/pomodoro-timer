{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pomodoro Timer",
  "version": "0.1.0",
  "identifier": "com.elvinega.pomodoro-timer",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pomodoro Timer",
        "width": 400,
        "height": 700,
        "resizable": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "transparent": false,
        "acceptFirstMouse": true,
        "tabbingIdentifier": "pomodoro-timer",
        "additionalBrowserArgs": "--enable-features=WebContentsForceDark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "category": "Productivity",
    "shortDescription": "A modern Pomodoro Timer for focused work sessions",
    "longDescription": "A sleek, dark-themed Pomodoro Timer with customizable profiles, activity tracking, and comprehensive productivity analytics."
  }
}
